@sample
mono = (spl0 + spl1) * 0.5 * in_level;
// Input clamp — catches record-arm spikes before the amp sees them
mono = max(-1.0, min(1.0, mono));

// Tuner — feed dry input for best pitch detection
tuner.lms_yin_write(mono);

// 0. RF filter (removes ultrasonic content before gain stages)
mono = rf_filter.bq_proc(mono);

// 1. Input stage (grid physics)
input_intensity > 0.0 ? (
  mono = inp.input_stage_proc(mono, input_intensity);
);

// 2. Input coupling cap
mono = input_hp.bq_proc(mono);

// 3. PSU sag (silicon only — very stiff)
bplus = psu.psu_proc(abs(mono) * (1.0 + gain * 2.0), sag_depth * ohm_sag_mult);

// 4. Bright cap — gain-dependent treble boost
bright_db = (1.0 - gain) * (1.0 - gain) * 4.0;
bright_cap.bq_set_hishelf(2000, bright_db, 0.7);
mono = bright_cap.bq_proc(mono);

// === CHANNEL ROUTING ===
channel == 0 ? (
  // ========================================
  // CLEAN CHANNEL
  // V1A(0.40) → V1B(0.35) → Cold Clipper(0.25, mild) → DC Block → CF → Tone Stack → V4(post*0.15)
  // ========================================
  v1a_drive = gain * 0.40;
  v1a_out = v1a.triode_proc(mono, v1a_drive, bplus,
    1.3, 1.1, 0.85, 1.0, 0.35, 0.12);

  v1b_drive = gain * 0.35;
  v1b_out = v1b.triode_proc(v1a_out, v1b_drive, bplus,
    1.3, 1.0, 0.85, 1.0, 0.35, 0.10);

  // Cold clipper — mild intensity (0.3)
  cc_drive = gain * 0.25;
  amp_out = cc.cold_clipper_proc(v1b_out, cc_drive, bplus, 0.3);

  // DC block
  amp_out = preamp_dc.dc_proc(amp_out);

  // Cathode follower
  amp_out = cf.cathode_follower_proc(amp_out, bplus);

  // Tone stack
  amp_out = ts.tonestack_proc(amp_out);
  amp_out *= 3.5;

  // V4 recovery — Post Gain stage
  v4_drive = post_gain * 0.15;
  amp_out = v4.triode_proc(amp_out, v4_drive, bplus,
    1.1, 0.9, 0.90, 1.0, 0.45, 0.08);

) : (
  // ========================================
  // LEAD CHANNEL
  // V1A(0.85) → V1B(0.80) → Cold Clipper(0.70, crushed) → V2B(0.55) → V3A(0.60) → DC Block → CF → Tone Stack → V4(post*0.30)
  // ========================================
  v1a_drive = gain * 0.85;
  v1a_out = v1a.triode_proc(mono, v1a_drive, bplus,
    1.5, 1.2, 0.80, 1.0, 0.30, 0.15);

  v1b_drive = gain * 0.80;
  v1b_out = v1b.triode_proc(v1a_out, v1b_drive, bplus,
    1.4, 1.1, 0.82, 1.0, 0.30, 0.15);

  // Cold clipper — crushed intensity (0.7)
  cc_drive = gain * 0.70;
  cc_out = cc.cold_clipper_proc(v1b_out, cc_drive, bplus, 0.7);

  // V2B
  v2b_drive = gain * 0.55;
  v2b_out = v2b.triode_proc(cc_out, v2b_drive, bplus,
    1.3, 1.0, 0.85, 1.0, 0.35, 0.12);

  // V3A
  v3a_drive = gain * 0.60;
  amp_out = v3a.triode_proc(v2b_out, v3a_drive, bplus,
    1.4, 1.1, 0.80, 0.95, 0.30, 0.15);

  // DC block
  amp_out = preamp_dc.dc_proc(amp_out);

  // Cathode follower
  amp_out = cf.cathode_follower_proc(amp_out, bplus);

  // Tone stack
  amp_out = ts.tonestack_proc(amp_out);
  amp_out *= 5.5;

  // V4 recovery — Post Gain stage (higher drive on Lead)
  v4_drive = post_gain * 0.30;
  amp_out = v4.triode_proc(amp_out, v4_drive, bplus,
    1.1, 0.9, 0.90, 1.0, 0.45, 0.08);
);

// === EFFECTS LOOP (pre-power-amp) ===
fx_bypass == 0 ? (
  echo_mix > 0 ? (
    amp_out = echo.tape_echo_proc(amp_out, echo_mix, 0.5, echo_feedback);
  );
  amp_out = max(-0.95, min(0.95, amp_out));
);

// === POWER AMP (cold-biased 6L6GC with crossover distortion) ===
amp_out *= master;
amp_out = pa.poweramp_proc(amp_out, bplus);

// === NOISE GATE ===
gate_on == 1 ? (
  amp_out = gate.sgate_proc(amp_out);
);

// === IMPEDANCE INTERACTION — power delivery + damping factor ===
amp_out *= ohm_vol;                       // lower load = more power = louder
amp_out = ohm_lo.lms_bq_proc(amp_out);   // lower load = less damping = looser bass

// === CABINET (density-aware speaker sim — dual cab mix) ===
channel == 0 ? (
  cab_dual ? (
    cab_a_out = cab.lms_cab_proc(amp_out, cc.triode.hd.density);
    cab_b_out = cab2.lms_cab_proc(amp_out, cc.triode.hd.density);
    amp_out = (cab_a_out + cab_b_out) * 0.5;
  ) : cab_b_solo ? (
    amp_out = cab2.lms_cab_proc(amp_out, cc.triode.hd.density);
  ) : (
    amp_out = cab.lms_cab_proc(amp_out, cc.triode.hd.density);
  );
