@init

// === CORE MATH ===
function tanh_approx(x) local(e2x) ( x > 10 ? 1 : x < -10 ? -1 : ( e2x = exp(2*x); (e2x-1)/(e2x+1); ); );

function bq_init() ( this.b0=1; this.b1=0; this.b2=0; this.a1=0; this.a2=0; this.x1=0; this.x2=0; this.y1=0; this.y2=0; );
function bq_set_lp(freq, q) local(w0, cs, sn, alpha, a0_inv) ( w0=2*$pi*freq/srate; cs=cos(w0); sn=sin(w0); alpha=sn/(2*q); a0_inv=1/(1+alpha); this.b0=(1-cs)/2*a0_inv; this.b1=(1-cs)*a0_inv; this.b2=(1-cs)/2*a0_inv; this.a1=-2*cs*a0_inv; this.a2=(1-alpha)*a0_inv; );
function bq_set_hp(freq, q) local(w0, cs, sn, alpha, a0_inv) ( w0=2*$pi*freq/srate; cs=cos(w0); sn=sin(w0); alpha=sn/(2*q); a0_inv=1/(1+alpha); this.b0=(1+cs)/2*a0_inv; this.b1=-(1+cs)*a0_inv; this.b2=(1+cs)/2*a0_inv; this.a1=-2*cs*a0_inv; this.a2=(1-alpha)*a0_inv; );
function bq_set_peak(freq, gain_db, q) local(a, w0, alpha, a0_inv) ( a=10^(gain_db/20); w0=2*$pi*freq/srate; alpha=sin(w0)/(2*q); a0_inv=1/(1+alpha/a); this.b0=(1+alpha*a)*a0_inv; this.b1=(-2*cos(w0))*a0_inv; this.b2=(1-alpha*a)*a0_inv; this.a1=this.b1; this.a2=(1-alpha/a)*a0_inv; );
function bq_set_loshelf(freq, gain_db, q) local(a, w0, cs, sn, alpha, ap1, am1, beta, a0_inv) ( a=10^(gain_db/40); w0=2*$pi*freq/srate; cs=cos(w0); sn=sin(w0); alpha=sn/(2*q); ap1=a+1; am1=a-1; beta=2*sqrt(a)*alpha; a0_inv=1/(ap1+am1*cs+beta); this.b0=a*(ap1-am1*cs+beta)*a0_inv; this.b1=2*a*(am1-ap1*cs)*a0_inv; this.b2=a*(ap1-am1*cs-beta)*a0_inv; this.a1=-2*(am1+ap1*cs)*a0_inv; this.a2=(ap1+am1*cs-beta)*a0_inv; );
function bq_set_hishelf(freq, gain_db, q) local(a, w0, cs, sn, alpha, ap1, am1, beta, a0_inv) ( a=10^(gain_db/40); w0=2*$pi*freq/srate; cs=cos(w0); sn=sin(w0); alpha=sn/(2*q); ap1=a+1; am1=a-1; beta=2*sqrt(a)*alpha; a0_inv=1/(ap1-am1*cs+beta); this.b0=a*(ap1+am1*cs+beta)*a0_inv; this.b1=-2*a*(am1+ap1*cs)*a0_inv; this.b2=a*(ap1+am1*cs-beta)*a0_inv; this.a1=2*(am1-ap1*cs)*a0_inv; this.a2=(ap1-am1*cs-beta)*a0_inv; );
function bq_proc(x) local(o) ( o=this.b0*x + this.b1*this.x1 + this.b2*this.x2 - this.a1*this.y1 - this.a2*this.y2; this.x2=this.x1; this.x1=x; this.y2=this.y1; this.y1=o; o; );
function dc_init() ( this.xp=0; this.yp=0; this.r=1-(20/srate); );
function dc_proc(x) ( this.yp=x-this.xp+this.r*this.yp; this.xp=x; this.yp; );

// === INPUT STAGE (proven from Miller test) ===
function input_stage_init() (
  this.cap_charge = 0.0;
  this.cap_charge_rate = exp(-1/(srate * 0.0005));
  this.cap_drain_rate = exp(-1/(srate * 0.030));
  this.input_lp.bq_init();
  this.input_lp.bq_set_lp(4500, 0.6);
  this.cathode_shelf.bq_init();
  this.cathode_shelf.bq_set_hishelf(800, -2.5, 0.5);
  this.peak_env = 0;
  this.peak_att = exp(-1/(srate * 0.0002));
  this.peak_rel = exp(-1/(srate * 0.050));
);

function input_stage_proc(x, intensity) local(loaded, dry, bias_shift, biased, grid_thresh, conducted) (
  loaded = this.input_lp.bq_proc(x);
  loaded = x + intensity * (loaded - x);
  loaded > 0.1 ? (
    this.cap_charge = this.cap_charge_rate * this.cap_charge + (1-this.cap_charge_rate) * loaded * 0.15 * intensity;
  ) : (
    this.cap_charge = this.cap_drain_rate * this.cap_charge;
  );
  bias_shift = this.cap_charge;
  biased = loaded - bias_shift;
  grid_thresh = 1.0 - intensity * 0.85;
  biased > grid_thresh ? (
    conducted = grid_thresh + tanh_approx((biased - grid_thresh) * (1.0 + intensity * 3.0)) * (0.05 + intensity * 0.15);
  ) : (
    conducted = biased;
  );
  dry = conducted;
  conducted = this.cathode_shelf.bq_proc(conducted);
  conducted = dry + intensity * (conducted - dry);
  abs(x) > this.peak_env ? (
    this.peak_env = this.peak_att * this.peak_env + (1-this.peak_att) * abs(x);
  ) : (
    this.peak_env = this.peak_rel * this.peak_env + (1-this.peak_rel) * abs(x);
  );
  conducted;
);

// === PSU SAG (5Y3 tube rectifier — one of the saggiest ever made) ===
// The 5Y3 is a full-wave tube rectifier with high internal resistance.
// Attack is SLOW (5ms — tube takes time to conduct under load).
// Recovery is VERY slow (200ms — tiny filter caps + tube rectifier resistance).
// Max droop 30% — this is a huge part of the Champ feel.
// Notes "bloom" as the supply recovers from transients.
function psu_init() (
  this.voltage = 1.0;
  this.att = exp(-1/(srate * 0.005));
  this.rel = exp(-1/(srate * 0.200));
  this.droop_amount = 0.0;
  // v3 ripple state (disabled until individually approved)
  this.ripple_phase = 0;
  this.ripple_freq = 120.0;
  this.ripple_amount = 0;
);
function psu_proc(signal_level, sag_depth) local(draw, ripple_wave) (
  draw = signal_level * signal_level;
  draw > this.droop_amount ? (
    this.droop_amount = this.att * this.droop_amount + (1-this.att) * draw;
  ) : (
    this.droop_amount = this.rel * this.droop_amount + (1-this.rel) * draw;
  );
  this.voltage = 1.0 - this.droop_amount * 0.30 * sag_depth;

  // 120Hz ripple: 5Y3 full-wave rectification of 60Hz AC
  // Tiny Champ filter caps (~20uF) barely smooth the ripple
  // Amplitude scales with droop — more current draw = caps drain faster = bigger ripple
  // At idle: zero. At full tilt: 120Hz rides on B+, intermodulates with everything
  this.ripple_phase += this.ripple_freq / srate;
  this.ripple_phase >= 1.0 ? this.ripple_phase -= 1.0;
  ripple_wave = sin(this.ripple_phase * 2.0 * $pi);
  this.ripple_amount = this.droop_amount * 0.04;
  this.voltage += ripple_wave * this.ripple_amount * sag_depth;

  this.voltage = max(0.55, min(1.0, this.voltage));
  this.voltage;
);

// === 4-BAND HARMONIC DENSITY TRACKER ===
function hd_init() (
  this.f_lo.bq_init(); this.f_lo.bq_set_lp(250,0.7);
  this.f_mid_lo.bq_init(); this.f_mid_lo.bq_set_lp(2000,0.7);
  this.f_mid_hi.bq_init(); this.f_mid_hi.bq_set_hp(250,0.7);
  this.f_hi.bq_init(); this.f_hi.bq_set_hp(2000,0.7);
  this.f_air.bq_init(); this.f_air.bq_set_hp(5000,0.7);
  this.env_lo=0; this.env_mid=0; this.env_hi=0; this.env_air=0; this.env_total=0;
  this.att=exp(-1/(srate*0.002)); this.rel=exp(-1/(srate*0.080));
  this.density=1.0; this.mid_density=0.0; this.hi_density=0.0; this.air_density=0.0;
  this.smooth=exp(-1/(srate*0.030));
);
function hd_proc(x) local(lo, mid, hi, air, abs_lo, abs_mid, abs_hi, abs_air, abs_total, raw, raw_mid, raw_hi, raw_air) (
  lo=this.f_lo.bq_proc(x);
  mid=this.f_mid_hi.bq_proc(this.f_mid_lo.bq_proc(x));
  hi=this.f_hi.bq_proc(x);
  air=this.f_air.bq_proc(x);
  abs_lo=abs(lo); abs_mid=abs(mid); abs_hi=abs(hi); abs_air=abs(air); abs_total=abs(x);
  abs_lo > this.env_lo ? ( this.env_lo=this.att*this.env_lo+(1-this.att)*abs_lo; ) : ( this.env_lo=this.rel*this.env_lo+(1-this.rel)*abs_lo; );
  abs_mid > this.env_mid ? ( this.env_mid=this.att*this.env_mid+(1-this.att)*abs_mid; ) : ( this.env_mid=this.rel*this.env_mid+(1-this.rel)*abs_mid; );
  abs_hi > this.env_hi ? ( this.env_hi=this.att*this.env_hi+(1-this.att)*abs_hi; ) : ( this.env_hi=this.rel*this.env_hi+(1-this.rel)*abs_hi; );
  abs_air > this.env_air ? ( this.env_air=this.att*this.env_air+(1-this.att)*abs_air; ) : ( this.env_air=this.rel*this.env_air+(1-this.rel)*abs_air; );
  abs_total > this.env_total ? ( this.env_total=this.att*this.env_total+(1-this.att)*abs_total; ) : ( this.env_total=this.rel*this.env_total+(1-this.rel)*abs_total; );
  this.env_lo > 0.0001 ? ( raw=this.env_total/this.env_lo; raw=min(2.5,max(1.0,raw)); ) : ( raw=1.0; );
  this.env_total > 0.0001 ? (
    raw_mid=this.env_mid/this.env_total; raw_mid=min(1.0,max(0.0,raw_mid));
    raw_hi=this.env_hi/this.env_total; raw_hi=min(1.0,max(0.0,raw_hi));
    raw_air=this.env_air/this.env_total; raw_air=min(1.0,max(0.0,raw_air));
  ) : ( raw_mid=0.0; raw_hi=0.0; raw_air=0.0; );
  this.density=this.smooth*this.density+(1-this.smooth)*raw;
  this.mid_density=this.smooth*this.mid_density+(1-this.smooth)*raw_mid;
  this.hi_density=this.smooth*this.hi_density+(1-this.smooth)*raw_hi;
  this.air_density=this.smooth*this.air_density+(1-this.smooth)*raw_air;
);

// === DENSITY-AWARE TRIODE (v2b) ===
function triode_init(hp_freq, lp_freq) (
  this.hp.bq_init();
  this.hp.bq_set_hp(hp_freq, 0.7);
  this.cap_charge = 0.0;
  this.cap_charge_rate = exp(-1/(srate * 0.0005));
  this.cap_drain_rate = exp(-1/(srate * 0.030));
  this.miller.bq_init();
  this.miller.bq_set_lp(lp_freq, 0.6);
  this.miller_base_freq = lp_freq;
  this.last_miller_freq = lp_freq;
  this.last_miller_q = 0.6;
  this.air_shelf.bq_init();
  this.air_shelf.bq_set_hishelf(5000, 0.0, 0.7);
  this.last_air_cut = 0.0;
  this.hd.hd_init();
  this.dc.dc_init();
  this.peak_env = 0;
  this.peak_att = exp(-1/(srate * 0.0002));
  this.peak_rel = exp(-1/(srate * 0.050));
);

function triode_proc(x, drive, bplus, pos_hard, neg_hard, pos_ceil, neg_ceil, gc_thresh, gc_amount)
  local(b, gain, bias_shift, p_ceil, n_ceil, gc_out, lp_freq, lp_q, air_cut, drive_boost, ax)
(
  b = this.hp.bq_proc(x);
  b > 0.1 ? (
    this.cap_charge = this.cap_charge_rate * this.cap_charge + (1-this.cap_charge_rate) * b * 0.12;
  ) : (
    this.cap_charge = this.cap_drain_rate * this.cap_charge;
  );
  bias_shift = this.cap_charge;
  b = b - bias_shift;
  drive_boost = 1.0 + this.hd.mid_density * 0.4;
  gain = (1.0 + drive * 4.0) * drive_boost;
  b = b * gain;
  this.hd.hd_proc(b);
  // Asymmetric triode clipping (proven v2 tanh curves)
  // Density-aware drive/Miller/grid conduction handles the "why it sounds musical"
  // B+ modulates the ceiling — sag changes headroom
  p_ceil = pos_ceil * bplus;
  n_ceil = neg_ceil * bplus;
  b >= 0 ? (
    b = tanh_approx(b * pos_hard) * p_ceil;
  ) : (
    b = tanh_approx(b * neg_hard) * n_ceil;
  );
  ax = abs(b);
  ax > this.peak_env ? (
    this.peak_env = this.peak_att * this.peak_env + (1-this.peak_att) * ax;
  ) : (
    this.peak_env = this.peak_rel * this.peak_env + (1-this.peak_rel) * ax;
  );
  b > gc_thresh && this.peak_env > gc_thresh * 0.8 ? (
    gc_out = gc_thresh + tanh_approx((b - gc_thresh) * 3.0) * gc_amount;
    b = gc_out;
  );
  lp_freq = this.miller_base_freq - (this.hd.density - 1.0) * 500;
  lp_freq = max(this.miller_base_freq - 1500, min(this.miller_base_freq + 500, lp_freq));
  lp_q = 0.6 + this.hd.hi_density * 0.35;
  lp_q = max(0.6, min(0.95, lp_q));
  abs(lp_freq - this.last_miller_freq) > 30 || abs(lp_q - this.last_miller_q) > 0.02 ? (
    this.miller.bq_set_lp(lp_freq, lp_q);
    this.last_miller_freq = lp_freq;
    this.last_miller_q = lp_q;
  );
  b = this.miller.bq_proc(b);
  air_cut = -this.hd.air_density * 3.0;
  air_cut = max(-3.0, min(0.0, air_cut));
  abs(air_cut - this.last_air_cut) > 0.1 ? (
    this.air_shelf.bq_set_hishelf(5000, air_cut, 0.7);
    this.last_air_cut = air_cut;
  );
  b = this.air_shelf.bq_proc(b);
  b = this.dc.dc_proc(b);
  b;
);

// === OUTPUT TRANSFORMER CORE HYSTERESIS (B-H Curve with Memory) ===
// Real transformer cores retain magnetization (remanence). The relationship
// between magnetic field H and flux density B follows a hysteresis loop:
// ascending and descending paths are DIFFERENT. This creates:
// - Even harmonic distortion at ALL signal levels
// - History-dependent saturation (previous note colors the next)
// - DC bias asymmetry from single-ended plate current
// - Frequency-dependent: LF drives larger flux swings = more saturation
function xfmr_hyst_init() (
  this.B = 0;             // magnetic flux density (state — persists!)
  this.H_prev = 0;        // previous field intensity (for direction)
  this.Bsat = 1.0;        // saturation flux density (normalized)
  this.Br = 0.25;         // remanence: residual flux after field removed
  this.Hc = 0.12;         // coercivity: field needed to demagnetize
  this.mu = 0.4;          // base permeability: how fast B tracks H
  this.dc_bias_amt = 0.15; // DC flux bias from SE plate current
  this.lf_extract = 0;    // one-pole LP for LF content extraction
  this.lf_coeff = 0.012;  // ~41 samples @ 44.1k (matches old xfmr LP)
);

function xfmr_hyst_proc(input, bplus, density_val)
  local(lo, hi, H, dH, dc_bias, Bsat_pos, Bsat_neg, eff_Hc, target, eff_mu, demag, out)
(
  // Split LF content (core saturates on low frequencies)
  this.lf_extract = this.lf_extract * (1 - this.lf_coeff) + input * this.lf_coeff;
  lo = this.lf_extract;
  hi = input - lo;

  // H = applied magnetic field from signal (LF content drives the core)
  H = lo;

  // Direction detection: which branch of the B-H loop are we on?
  dH = H - this.H_prev;

  // DC bias from SE plate current creates ASYMMETRIC saturation limits:
  // Positive Bsat is REDUCED (core is pre-magnetized toward +Bsat)
  // Negative Bsat is INCREASED (more headroom on negative swing)
  // This is THE key SE transformer behavior — even harmonics from asymmetry
  dc_bias = this.dc_bias_amt * bplus;
  Bsat_pos = this.Bsat * (1.0 - dc_bias);   // positive ceiling lowered
  Bsat_neg = this.Bsat * (1.0 + dc_bias);   // negative ceiling raised

  // Effective coercivity scales with signal activity
  // At idle (H near zero), Hc fades out so B settles to zero (no DC offset)
  // Under signal, full Hc creates the hysteresis loop and remanence
  eff_Hc = this.Hc * min(1.0, abs(H) * 8.0);

  // Ascending branch: B approaches +Bsat (reduced) with coercivity offset
  // Descending branch: B approaches -Bsat (extended) with opposite offset
  // The DIFFERENT PATHS create the hysteresis loop
  // Loop area = core loss energy = even harmonic distortion
  dH >= 0 ? (
    target = Bsat_pos * tanh_approx((H + eff_Hc) * 1.5 / Bsat_pos);
  ) : (
    target = -Bsat_neg * tanh_approx((-H + eff_Hc) * 1.5 / Bsat_neg);
  );

  // Permeability: how fast flux tracks the target field
  // Dense signal = core working harder = slightly reduced permeability
  // Small fields barely move the domains (initial permeability region)
  // — real iron ignores whispers, only responds to meaningful drive
  eff_mu = this.mu - (density_val - 1.0) * 0.05;
  eff_mu = max(0.15, min(0.5, eff_mu));
  eff_mu *= min(1.0, abs(H) * 5.0);

  // Flux state update (THE MEMORY — B persists across samples)
  // Demagnetization: B decays toward zero when not driven hard
  // Faster decay when signal is quiet — core relaxes when amp is idle
  this.B += (target - this.B) * eff_mu;
  demag = 0.9997 - (1.0 - min(1.0, abs(H) * 3.0)) * 0.003;
  this.B *= demag;
  this.H_prev = H;

  // Output: magnetized LF (with hysteresis) + unprocessed HF
  // Downstream DC blocker in se_poweramp_proc handles any residual DC
  // from coercivity remanence (this is real — transformers hold a tiny charge)
  out = this.B + hi;
  out;
);

// === SINGLE-ENDED 6V6 CLASS A POWER AMP ===
// The Champ is NOT push-pull. Single 6V6 tube, Class A.
// Key differences from push-pull:
// - Asymmetric clipping by nature (one tube does everything)
// - Even harmonics preserved (push-pull cancels evens; single-ended keeps them)
// - Lower headroom — breaks up earlier than any push-pull design
// - No NFB (Champ has minimal/no NFB)
// - Cathode bias shift: idle current shifts with signal = natural compression
// - Output transformer saturation: tiny 5W transformer saturates EARLY
// - Winding resonance: small transformer has HF resonance peak
function se_poweramp_init() (
  this.hd.hd_init();
  this.dc.dc_init();
  this.drive = 0;

  // Cathode bias shift: 6V6 cathode cap charges with signal level
  // This shifts the operating point colder = natural compression
  this.cathode_charge = 0;
  this.cathode_att = exp(-1/(srate * 0.005));
  this.cathode_rel = exp(-1/(srate * 0.150));

  // Screen grid current (v3 — disabled until individually approved)
  this.screen_current = 0;
  this.screen_att = exp(-1/(srate * 0.001));
  this.screen_rel = exp(-1/(srate * 0.050));

  // Output transformer saturation state (v2 memoryless — one-pole LP for LF extraction)
  this.xfmr_lp = 0;

  // Hysteresis model (v3 — disabled until individually approved)
  this.hyst.xfmr_hyst_init();

  // Transformer winding resonance (small transformer = 3.5kHz, the Champ "sparkle")
  this.xfmr_res.bq_init();
  this.xfmr_res.bq_set_peak(3500, 2.5, 2.0);

  // Minimal alias LP (no NFB, just tame ultrasonic content)
  this.alias_lp.bq_init();
  this.alias_lp.bq_set_lp(10000, 0.4);
);

function se_poweramp_proc(x, bplus)
  local(b, out, cathode_shift, signal_level, grid_drive, screen_draw, xfmr_sat, lo_content, hi_content, lo_saturated, lo_final, hyst_out, hyst_blend)
(
  b = x * (1.0 + this.drive * 2.0);

  // Density tracker (for monitor + transformer saturation)
  this.hd.hd_proc(b);

  // Cathode bias shift — the 6V6 cathode cap charges with signal
  // On loud signals, the bias shifts colder = gain reduction = compression
  signal_level = abs(b);
  signal_level > this.cathode_charge ? (
    this.cathode_charge = this.cathode_att * this.cathode_charge + (1-this.cathode_att) * signal_level;
  ) : (
    this.cathode_charge = this.cathode_rel * this.cathode_charge + (1-this.cathode_rel) * signal_level;
  );
  cathode_shift = this.cathode_charge * 0.20;
  b = b * (1.0 - cathode_shift);

  // Screen grid current — 6V6 screen draws current when control grid swings positive
  // This current comes FROM THE PSU (fed back via psu_draw on next sample)
  // and STEALS from plate current = compression + harmonic shift
  // Onset at ~40% drive, density-modulated (dense = more grid excursion = earlier onset)
  grid_drive = abs(b);
  screen_draw = max(0, grid_drive - 0.4 + this.hd.mid_density * 0.1) * 0.3;
  screen_draw > this.screen_current ? (
    this.screen_current = this.screen_att * this.screen_current + (1-this.screen_att) * screen_draw;
  ) : (
    this.screen_current = this.screen_rel * this.screen_current + (1-this.screen_rel) * screen_draw;
  );
  // Screen current reduces available plate current — not an effect, a circuit interaction
  b = b * (1.0 - this.screen_current * 0.25);

  // SINGLE-ENDED CLIPPING — NOT push-pull!
  b >= 0 ? (
    out = tanh_approx(b * 1.8) * 0.7 * bplus;
  ) : (
    out = tanh_approx(b * 0.6) * 1.0 * bplus;
  );

  // Output transformer saturation — TINY Champ transformer (5W rated)
  // Memoryless LF saturation (v2 proven behavior — STAYS)
  xfmr_sat = this.hd.env_lo;
  xfmr_sat = min(1.0, xfmr_sat * 4.0);
  xfmr_sat > 0.05 ? (
    this.xfmr_lp = this.xfmr_lp * 0.988 + out * 0.012;
    lo_content = this.xfmr_lp;
    hi_content = out - lo_content;
    lo_saturated = tanh_approx(lo_content * (1.0 + xfmr_sat * 1.5))
                   / (1.0 + xfmr_sat * 0.3);
    lo_final = lo_content + xfmr_sat * (lo_saturated - lo_content);
    out = lo_final + hi_content;
  );

  // Transformer core MEMORY — hysteresis layered on top of v2 saturation
  // The core remembers. Previous notes bias the next note's saturation.
  // Only engages when power amp is actually working — use the cathode charge
  // as the gate (it tracks signal envelope, not instantaneous level)
  this.cathode_charge > 0.01 ? (
    hyst_out = this.hyst.xfmr_hyst_proc(out, bplus, this.hd.density);
    hyst_blend = min(0.05, this.cathode_charge * 0.2);
    out = out * (1.0 - hyst_blend) + hyst_out * hyst_blend;
  ) : (
    this.hyst.B *= 0.999;
  );

  // Transformer winding resonance (3.5kHz peak — Champ's "sparkle")
  out = this.xfmr_res.bq_proc(out);

  // NO NFB — Champ has minimal/no negative feedback
  // Just gentle alias LP (like AC15)
  out = this.alias_lp.bq_proc(out);

  out = this.dc.dc_proc(out);
  out * 0.85;
);

// === SPRING REVERB (Champ-style — single spring, lo-fi, drippy) ===
function spring_init() (
  this.buf_base = 50000;
  this.pd_off = 0;       this.pd_len = 337;    this.pd_pos = 0;
  this.ap1_off = 400;    this.ap1_len = 1087;  this.ap1_pos = 0;
  this.ap2_off = 1500;   this.ap2_len = 1483;  this.ap2_pos = 0;
  this.ap3_off = 3000;   this.ap3_len = 1801;  this.ap3_pos = 0;
  this.ap4_off = 4900;   this.ap4_len = 2213;  this.ap4_pos = 0;
  this.fb_off = 7200;    this.fb_len = 3571;   this.fb_pos = 0;
  this.fb_val = 0;
  this.fb_lp.bq_init();
  this.fb_lp.bq_set_lp(2500, 0.5);
  this.in_lp.bq_init();
  this.in_lp.bq_set_lp(4000, 0.6);
  // Real springs can't carry bass — HP the wet signal
  this.out_hp.bq_init();
  this.out_hp.bq_set_hp(180, 0.7);
  memset(this.buf_base, 0, 11000);
);
function spring_proc(x, mix) local(input, ap_out, delayed, fb, wet, coeff) (
  input = this.in_lp.bq_proc(x);
  coeff = 0.28;
  delayed = (this.buf_base + this.pd_off)[this.pd_pos];
  (this.buf_base + this.pd_off)[this.pd_pos] = input + this.fb_val * coeff;
  this.pd_pos += 1; this.pd_pos >= this.pd_len ? this.pd_pos = 0;
  ap_out = delayed;
  fb = (this.buf_base + this.ap1_off)[this.ap1_pos];
  (this.buf_base + this.ap1_off)[this.ap1_pos] = ap_out + fb * 0.5;
  ap_out = fb - ap_out * 0.5;
  this.ap1_pos += 1; this.ap1_pos >= this.ap1_len ? this.ap1_pos = 0;
  fb = (this.buf_base + this.ap2_off)[this.ap2_pos];
  (this.buf_base + this.ap2_off)[this.ap2_pos] = ap_out + fb * 0.5;
  ap_out = fb - ap_out * 0.5;
  this.ap2_pos += 1; this.ap2_pos >= this.ap2_len ? this.ap2_pos = 0;
  fb = (this.buf_base + this.ap3_off)[this.ap3_pos];
  (this.buf_base + this.ap3_off)[this.ap3_pos] = ap_out + fb * 0.45;
  ap_out = fb - ap_out * 0.45;
  this.ap3_pos += 1; this.ap3_pos >= this.ap3_len ? this.ap3_pos = 0;
  fb = (this.buf_base + this.ap4_off)[this.ap4_pos];
  (this.buf_base + this.ap4_off)[this.ap4_pos] = ap_out + fb * 0.4;
  ap_out = fb - ap_out * 0.4;
  this.ap4_pos += 1; this.ap4_pos >= this.ap4_len ? this.ap4_pos = 0;
  this.fb_val = this.fb_lp.bq_proc(ap_out);
  this.fb_val = max(-0.9, min(0.9, this.fb_val));
  wet = (this.buf_base + this.fb_off)[this.fb_pos];
  (this.buf_base + this.fb_off)[this.fb_pos] = ap_out;
  this.fb_pos += 1; this.fb_pos >= this.fb_len ? this.fb_pos = 0;
  wet = (ap_out + wet * 0.3) * 0.7;
  wet = this.out_hp.bq_proc(wet);
  x + wet * mix;
);

// === TREMOLO (Champ-style bias tremolo) ===
function trem_init() (
  this.phase = 0;
);
function trem_proc(x, depth, speed) local(rate, lfo) (
  rate = 1.0 + speed * 9.0;
  this.phase += rate / srate;
  this.phase >= 1.0 ? this.phase -= 1.0;
  lfo = sin(this.phase * 2.0 * $pi);
  x * (1.0 - depth * 0.8 * (0.5 + lfo * 0.5));
);

// === SOFT GATE ===
function sgate_init() (
  this.env = 0;
  this.att = exp(-1/(srate * 0.0005));
  this.rel = exp(-1/(srate * 0.150));
);
function sgate_proc(x) local(ax, gate_gain) (
  ax = abs(x);
  ax > this.env ? (
    this.env = this.att * this.env + (1-this.att) * ax;
  ) : (
    this.env = this.rel * this.env + (1-this.rel) * ax;
  );
  this.env > 0.001 ? ( gate_gain = 1.0; )
  : this.env < 0.0002 ? ( gate_gain = 0.0; )
  : (
    gate_gain = (this.env - 0.0002) / 0.0008;
    gate_gain = gate_gain * gate_gain * (3.0 - 2.0 * gate_gain);
  );
  x * gate_gain;
);

// === SPEAKER IMPEDANCE INTERACTION ===
// Real speaker impedance varies ~3:1 across frequency. No NFB in Champ
// means the speaker resonance is uncontrolled — dominates the tone.
// The output transformer sees this varying load, which affects how hard
// the power tube is loaded at different frequencies.
function spk_impedance_init() (
  // Speaker cone resonance peak ~80Hz (+1.5dB, narrow Q)
  // Subtle — this is coloration, not boost. The cab sim handles the big EQ shape.
  this.res.bq_init();
  this.res.bq_set_peak(80, 1.5, 3.0);
  // Voice coil inductance: slight brightness rise above 1.5kHz
  this.voice.bq_init();
  this.voice.bq_set_hishelf(1500, 0.8, 0.7);
  // Back-EMF envelope (speaker cone motion generates opposing voltage)
  this.env = 0;
  this.att = exp(-1/(srate * 0.002));
  this.rel = exp(-1/(srate * 0.080));
);

function spk_impedance_proc(x) local(res_out, voice_out, spk_level, backemf) (
  // Speaker resonance amplifies at resonant frequency
  res_out = this.res.bq_proc(x);
  voice_out = this.voice.bq_proc(res_out);

  // Back-EMF: moving cone generates voltage opposing the drive
  // Louder signal = more cone movement = more back-EMF = compression at resonance
  spk_level = abs(voice_out);
  spk_level > this.env ? (
    this.env = this.att * this.env + (1-this.att) * spk_level;
  ) : (
    this.env = this.rel * this.env + (1-this.rel) * spk_level;
  );
  backemf = this.env * 0.15;
  voice_out * (1.0 - backemf);
);

