_old = slider8; slider8 = draw_bar(cx + 4, cy, cw - 8, bar_h, slider8, 0, 100, "Spring Reverb", 1);
slider8 != _old ? slider_automate(2^7);
cy += bar_sp;
_old = slider10; slider10 = draw_bar(cx + 4, cy, cw - 8, bar_h, slider10, 0, 100, "Trem Depth", 1);
slider10 != _old ? slider_automate(2^9);
cy += bar_sp;
_old = slider11; slider11 = draw_bar(cx + 4, cy, cw - 8, bar_h, slider11, 0, 100, "Trem Speed", 1);
slider11 != _old ? slider_automate(2^10);

  // ============================================================
  // INSTANCE MANAGER PANEL
  // ============================================================
  bc_rows_per_page = 5;
  bc_panel_h = bc_panel_expanded ? (30 + bc_rows_per_page * 14 + 18) : 30;
  bc_panel_y = gfx_h - bc_panel_h;

  gfx_r = 0.04; gfx_g = 0.04; gfx_b = 0.06;
