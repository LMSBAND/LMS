@init

// === CORE MATH ===
function tanh_approx(x) local(e2x) ( x > 10 ? 1 : x < -10 ? -1 : ( e2x = exp(2*x); (e2x-1)/(e2x+1); ); );

function bq_init() ( this.b0=1; this.b1=0; this.b2=0; this.a1=0; this.a2=0; this.x1=0; this.x2=0; this.y1=0; this.y2=0; );
function bq_set_lp(freq, q) local(w0, cs, sn, alpha, a0_inv) ( w0=2*$pi*freq/srate; cs=cos(w0); sn=sin(w0); alpha=sn/(2*q); a0_inv=1/(1+alpha); this.b0=(1-cs)/2*a0_inv; this.b1=(1-cs)*a0_inv; this.b2=(1-cs)/2*a0_inv; this.a1=-2*cs*a0_inv; this.a2=(1-alpha)*a0_inv; );
function bq_set_hp(freq, q) local(w0, cs, sn, alpha, a0_inv) ( w0=2*$pi*freq/srate; cs=cos(w0); sn=sin(w0); alpha=sn/(2*q); a0_inv=1/(1+alpha); this.b0=(1+cs)/2*a0_inv; this.b1=-(1+cs)*a0_inv; this.b2=(1+cs)/2*a0_inv; this.a1=-2*cs*a0_inv; this.a2=(1-alpha)*a0_inv; );
function bq_set_peak(freq, gain_db, q) local(a, w0, alpha, a0_inv) ( a=10^(gain_db/20); w0=2*$pi*freq/srate; alpha=sin(w0)/(2*q); a0_inv=1/(1+alpha/a); this.b0=(1+alpha*a)*a0_inv; this.b1=(-2*cos(w0))*a0_inv; this.b2=(1-alpha*a)*a0_inv; this.a1=this.b1; this.a2=(1-alpha/a)*a0_inv; );
function bq_set_loshelf(freq, gain_db, q) local(a, w0, cs, sn, alpha, ap1, am1, beta, a0_inv) ( a=10^(gain_db/40); w0=2*$pi*freq/srate; cs=cos(w0); sn=sin(w0); alpha=sn/(2*q); ap1=a+1; am1=a-1; beta=2*sqrt(a)*alpha; a0_inv=1/(ap1+am1*cs+beta); this.b0=a*(ap1-am1*cs+beta)*a0_inv; this.b1=2*a*(am1-ap1*cs)*a0_inv; this.b2=a*(ap1-am1*cs-beta)*a0_inv; this.a1=-2*(am1+ap1*cs)*a0_inv; this.a2=(ap1+am1*cs-beta)*a0_inv; );
function bq_set_hishelf(freq, gain_db, q) local(a, w0, cs, sn, alpha, ap1, am1, beta, a0_inv) ( a=10^(gain_db/40); w0=2*$pi*freq/srate; cs=cos(w0); sn=sin(w0); alpha=sn/(2*q); ap1=a+1; am1=a-1; beta=2*sqrt(a)*alpha; a0_inv=1/(ap1-am1*cs+beta); this.b0=a*(ap1+am1*cs+beta)*a0_inv; this.b1=-2*a*(am1+ap1*cs)*a0_inv; this.b2=a*(ap1+am1*cs-beta)*a0_inv; this.a1=2*(am1-ap1*cs)*a0_inv; this.a2=(ap1-am1*cs-beta)*a0_inv; );
function bq_proc(x) local(o) ( o=this.b0*x + this.b1*this.x1 + this.b2*this.x2 - this.a1*this.y1 - this.a2*this.y2; this.x2=this.x1; this.x1=x; this.y2=this.y1; this.y1=o; o; );
function dc_init() ( this.xp=0; this.yp=0; this.r=1-(20/srate); );
function dc_proc(x) ( this.yp=x-this.xp+this.r*this.yp; this.xp=x; this.yp; );

// === INPUT STAGE (grid physics — proven from Miller test) ===
// SVT input: 12AX7 grid, but bass guitar = lower impedance pickup,
// higher input loading capacitance, different grid leak characteristics
function input_stage_init() (
  this.cap_charge = 0.0;
  this.cap_charge_rate = exp(-1/(srate * 0.0005));
  this.cap_drain_rate = exp(-1/(srate * 0.030));
  // Bass guitar + SVT input = lower LP (pickup Z × tube Cin)
  // Bass pickups are lower impedance than guitar, but SVT input circuit
  // has more capacitance. Net effect: similar but slightly lower cutoff
  this.input_lp.bq_init();
  this.input_lp.bq_set_lp(3800, 0.5);
  // Cathode bypass — SVT has full bypass cap, so lows get MORE gain
  // than guitar amps. Bigger shelf, lower frequency.
  this.cathode_shelf.bq_init();
  this.cathode_shelf.bq_set_hishelf(400, -3.0, 0.5);
  this.peak_env = 0;
  this.peak_att = exp(-1/(srate * 0.0002));
  this.peak_rel = exp(-1/(srate * 0.050));
);

function input_stage_proc(x, intensity) local(loaded, dry, bias_shift, biased, grid_thresh, conducted) (
  loaded = this.input_lp.bq_proc(x);
  loaded = x + intensity * (loaded - x);
  loaded > 0.1 ? (
    this.cap_charge = this.cap_charge_rate * this.cap_charge + (1-this.cap_charge_rate) * loaded * 0.15 * intensity;
  ) : (
    this.cap_charge = this.cap_drain_rate * this.cap_charge;
  );
  bias_shift = this.cap_charge;
  biased = loaded - bias_shift;
  grid_thresh = 1.0 - intensity * 0.85;
  biased > grid_thresh ? (
    conducted = grid_thresh + tanh_approx((biased - grid_thresh) * (1.0 + intensity * 3.0)) * (0.05 + intensity * 0.15);
  ) : (
    conducted = biased;
  );
  dry = conducted;
  conducted = this.cathode_shelf.bq_proc(conducted);
  conducted = dry + intensity * (conducted - dry);
  abs(x) > this.peak_env ? (
    this.peak_env = this.peak_att * this.peak_env + (1-this.peak_att) * abs(x);
  ) : (
    this.peak_env = this.peak_rel * this.peak_env + (1-this.peak_rel) * abs(x);
  );
  conducted;
);

// === PSU SAG ===
// SVT has a massive power supply (tube rectifier in CL, SS in later models)
// Less sag than a Champ, but still present. Recovery is slower due to larger caps.
function psu_init() (
  this.voltage = 1.0;
  this.att = exp(-1/(srate * 0.002));    // 2ms droop (slower than Champ)
  this.rel = exp(-1/(srate * 0.120));    // 120ms recovery (big filter caps)
  this.droop_amount = 0.0;
);
function psu_proc(signal_level, sag_depth) local(draw) (
  draw = signal_level * signal_level;
  draw > this.droop_amount ? (
    this.droop_amount = this.att * this.droop_amount + (1-this.att) * draw;
  ) : (
    this.droop_amount = this.rel * this.droop_amount + (1-this.rel) * draw;
  );
  // SVT sags less than small amps — max 15% droop vs Champ's 25%
  this.voltage = 1.0 - this.droop_amount * 0.15 * sag_depth;
  this.voltage = max(0.7, min(1.0, this.voltage));
  this.voltage;
);

// === 4-BAND HARMONIC DENSITY TRACKER ===
// Same math as Punk v2, but band splits tuned for bass guitar spectrum
function hd_init() (
  this.f_lo.bq_init(); this.f_lo.bq_set_lp(150, 0.7);       // Sub/low bass (below 150Hz)
  this.f_mid_lo.bq_init(); this.f_mid_lo.bq_set_lp(1200, 0.7);
  this.f_mid_hi.bq_init(); this.f_mid_hi.bq_set_hp(150, 0.7);
  this.f_hi.bq_init(); this.f_hi.bq_set_hp(1200, 0.7);       // Upper mids/harmonics
  this.f_air.bq_init(); this.f_air.bq_set_hp(3500, 0.7);     // Clank/string noise
  this.env_lo=0; this.env_mid=0; this.env_hi=0; this.env_air=0; this.env_total=0;
  this.att=exp(-1/(srate*0.002)); this.rel=exp(-1/(srate*0.080));
  this.density=1.0; this.mid_density=0.0; this.hi_density=0.0; this.air_density=0.0;
  this.smooth=exp(-1/(srate*0.030));
);
function hd_proc(x) local(lo, mid, hi, air, abs_lo, abs_mid, abs_hi, abs_air, abs_total, raw, raw_mid, raw_hi, raw_air) (
  lo=this.f_lo.bq_proc(x);
  mid=this.f_mid_hi.bq_proc(this.f_mid_lo.bq_proc(x));
  hi=this.f_hi.bq_proc(x);
  air=this.f_air.bq_proc(x);
  abs_lo=abs(lo); abs_mid=abs(mid); abs_hi=abs(hi); abs_air=abs(air); abs_total=abs(x);
  abs_lo > this.env_lo ? ( this.env_lo=this.att*this.env_lo+(1-this.att)*abs_lo; ) : ( this.env_lo=this.rel*this.env_lo+(1-this.rel)*abs_lo; );
  abs_mid > this.env_mid ? ( this.env_mid=this.att*this.env_mid+(1-this.att)*abs_mid; ) : ( this.env_mid=this.rel*this.env_mid+(1-this.rel)*abs_mid; );
  abs_hi > this.env_hi ? ( this.env_hi=this.att*this.env_hi+(1-this.att)*abs_hi; ) : ( this.env_hi=this.rel*this.env_hi+(1-this.rel)*abs_hi; );
  abs_air > this.env_air ? ( this.env_air=this.att*this.env_air+(1-this.att)*abs_air; ) : ( this.env_air=this.rel*this.env_air+(1-this.rel)*abs_air; );
  abs_total > this.env_total ? ( this.env_total=this.att*this.env_total+(1-this.att)*abs_total; ) : ( this.env_total=this.rel*this.env_total+(1-this.rel)*abs_total; );
  this.env_lo > 0.0001 ? ( raw=this.env_total/this.env_lo; raw=min(2.5,max(1.0,raw)); ) : ( raw=1.0; );
  this.env_total > 0.0001 ? (
    raw_mid=this.env_mid/this.env_total; raw_mid=min(1.0,max(0.0,raw_mid));
    raw_hi=this.env_hi/this.env_total; raw_hi=min(1.0,max(0.0,raw_hi));
    raw_air=this.env_air/this.env_total; raw_air=min(1.0,max(0.0,raw_air));
  ) : ( raw_mid=0.0; raw_hi=0.0; raw_air=0.0; );
  this.density=this.smooth*this.density+(1-this.smooth)*raw;
  this.mid_density=this.smooth*this.mid_density+(1-this.smooth)*raw_mid;
  this.hi_density=this.smooth*this.hi_density+(1-this.smooth)*raw_hi;
  this.air_density=this.smooth*this.air_density+(1-this.smooth)*raw_air;
);

// =========================================================================
// === DENSITY-AWARE TRIODE (v2b — proven from Punk v2) ===
// FIXED clipping curves. Density drives filters and drive, not curve shape.
// =========================================================================
function triode_init(hp_freq, lp_freq) (
  this.hp.bq_init();
  this.hp.bq_set_hp(hp_freq, 0.7);
  this.cap_charge = 0.0;
  this.cap_charge_rate = exp(-1/(srate * 0.0005));
  this.cap_drain_rate = exp(-1/(srate * 0.030));
  this.miller.bq_init();
  this.miller.bq_set_lp(lp_freq, 0.6);
  this.miller_base_freq = lp_freq;
  this.last_miller_freq = lp_freq;
  this.last_miller_q = 0.6;
  this.air_shelf.bq_init();
  this.air_shelf.bq_set_hishelf(3500, 0.0, 0.7);
  this.last_air_cut = 0.0;
  this.hd.hd_init();
  this.dc.dc_init();
  this.peak_env = 0;
  this.peak_att = exp(-1/(srate * 0.0002));
  this.peak_rel = exp(-1/(srate * 0.050));
);

function triode_proc(x, drive, bplus, pos_hard, neg_hard, pos_ceil, neg_ceil, gc_thresh, gc_amount)
  local(b, gain, bias_shift, p_ceil, n_ceil, gc_out, lp_freq, lp_q, air_cut, drive_boost, ax)
(
  b = this.hp.bq_proc(x);
  b > 0.1 ? (
    this.cap_charge = this.cap_charge_rate * this.cap_charge + (1-this.cap_charge_rate) * b * 0.12;
  ) : (
    this.cap_charge = this.cap_drain_rate * this.cap_charge;
  );
  bias_shift = this.cap_charge;
  b = b - bias_shift;
  drive_boost = 1.0 + this.hd.mid_density * 0.4;
  gain = (1.0 + drive * 4.0) * drive_boost;
  b = b * gain;
  this.hd.hd_proc(b);
  p_ceil = pos_ceil * bplus;
  n_ceil = neg_ceil * bplus;
  b >= 0 ? (
    b = tanh_approx(b * pos_hard) * p_ceil;
  ) : (
    b = tanh_approx(b * neg_hard) * n_ceil;
  );
  ax = abs(b);
  ax > this.peak_env ? (
    this.peak_env = this.peak_att * this.peak_env + (1-this.peak_att) * ax;
  ) : (
    this.peak_env = this.peak_rel * this.peak_env + (1-this.peak_rel) * ax;
  );
  b > gc_thresh && this.peak_env > gc_thresh * 0.8 ? (
    gc_out = gc_thresh + tanh_approx((b - gc_thresh) * 3.0) * gc_amount;
    b = gc_out;
  );
  lp_freq = this.miller_base_freq - (this.hd.density - 1.0) * 500;
  lp_freq = max(this.miller_base_freq - 1500, min(this.miller_base_freq + 500, lp_freq));
  lp_q = 0.6 + this.hd.hi_density * 0.35;
  lp_q = max(0.6, min(0.95, lp_q));
  abs(lp_freq - this.last_miller_freq) > 30 || abs(lp_q - this.last_miller_q) > 0.02 ? (
    this.miller.bq_set_lp(lp_freq, lp_q);
    this.last_miller_freq = lp_freq;
    this.last_miller_q = lp_q;
  );
  b = this.miller.bq_proc(b);
  air_cut = -this.hd.air_density * 3.0;
  air_cut = max(-3.0, min(0.0, air_cut));
  abs(air_cut - this.last_air_cut) > 0.1 ? (
    this.air_shelf.bq_set_hishelf(3500, air_cut, 0.7);
    this.last_air_cut = air_cut;
  );
  b = this.air_shelf.bq_proc(b);
  b = this.dc.dc_proc(b);
  b;
);

// === SVT TONE STACK ===
// Active EQ — independent bands, selectable mid frequency
// Much more flexible than passive Marshall stack
function svt_tonestack_init() (
  this.f_bass.bq_init();
  this.f_mid.bq_init();
  this.f_treb.bq_init();
  this.f_pres.bq_init();
  // Ultra Lo: low shelf boost + mid notch scoop
  this.f_ulo_shelf.bq_init();
  this.f_ulo_notch.bq_init();
  // Ultra Hi: high shelf boost
  this.f_uhi.bq_init();
);
function svt_tonestack_set(bass, mid, mid_freq_sel, treble, ulo_on, uhi_on) local(bass_db, mid_db, treb_db, mid_freq, mid_q_base, mid_q) (
  // Bass: 80Hz low shelf, ±12dB
  bass_db = (bass - 0.5) * 24;
  this.f_bass.bq_set_loshelf(80, bass_db, 0.6);

  // Mid: selectable frequency peak, ±15dB
  // Q varies with frequency selection — real SVT component impedances change
  // 220Hz: wide/shelf-like (Q=1.2), 3kHz: narrow/surgical (Q=3.0)
  mid_freq_sel == 0 ? ( mid_freq = 220; mid_q_base = 1.2; );
  mid_freq_sel == 1 ? ( mid_freq = 450; mid_q_base = 1.5; );
  mid_freq_sel == 2 ? ( mid_freq = 800; mid_q_base = 2.0; );
  mid_freq_sel == 3 ? ( mid_freq = 1600; mid_q_base = 2.5; );
  mid_freq_sel == 4 ? ( mid_freq = 3000; mid_q_base = 3.0; );
  // Mid control affects Q slightly (pot loading) — cutting narrows it
  mid_q = mid_q_base + (1.0 - mid) * 0.5;
  mid_db = (mid - 0.5) * 30;
  this.f_mid.bq_set_peak(mid_freq, mid_db, mid_q);

  // Treble: 6kHz high shelf, ±10dB
  treb_db = (treble - 0.5) * 20;
  this.f_treb.bq_set_hishelf(6000, treb_db, 0.707);

  // Ultra Lo: +2dB@40Hz shelf + -10dB@500Hz notch (when on)
  ulo_on == 1 ? (
    this.f_ulo_shelf.bq_set_loshelf(40, 2, 0.7);
    this.f_ulo_notch.bq_set_peak(500, -10, 1.5);
  ) : (
    this.f_ulo_shelf.bq_set_loshelf(40, 0, 0.7);
    this.f_ulo_notch.bq_set_peak(500, 0, 1.5);
  );

  // Ultra Hi: +9dB@8kHz (when on)
  uhi_on == 1 ? (
    this.f_uhi.bq_set_hishelf(8000, 9, 0.7);
  ) : (
    this.f_uhi.bq_set_hishelf(8000, 0, 0.7);
  );
);
function svt_tonestack_proc(x) local(b) (
  b = this.f_bass.bq_proc(x);
  b = this.f_mid.bq_proc(b);
  b = this.f_treb.bq_proc(b);
  b = this.f_ulo_shelf.bq_proc(b);
  b = this.f_ulo_notch.bq_proc(b);
  b = this.f_uhi.bq_proc(b);
  b;
);

// === POWER AMP (6550 push-pull, FIXED clipping, density drives NFB) ===
// 6550s have MORE headroom than EL34s — harder to push into clipping
// When they do clip, it's more symmetrical (less even harmonics than EL34)
// NFB loop is tighter on SVT — more "solid state" feel at low gain
function poweramp_init() (
  this.hd.hd_init();
  this.dc.dc_init();
  this.pres_f.bq_init();
  this.nfb_lp.bq_init();
  this.nfb_lp.bq_set_lp(5000, 0.5);
  this.last_nfb_freq = 5000;
  this.drive = 0;
  this.xfmr_lp = 0;  // output transformer core saturation LP state
);
function poweramp_set(drive, presence) local(pres_freq, pres_db) (
  this.drive = drive;
  // SVT presence is subtle — applied in NFB loop
  pres_freq = 2000 + presence * 4000;
  pres_db = presence * 6;
  this.pres_f.bq_set_hishelf(pres_freq, pres_db, 0.9);
);
function poweramp_proc(x, bplus) local(b, push, pull, out, nfb_freq, xfmr_sat, lo_content, hi_content, lo_saturated, lo_final) (
  b = x * (1.0 + this.drive * 2.0);
  this.hd.hd_proc(b);

  // 6550 push-pull — MORE symmetrical than EL34
  // Both tubes clip at nearly same hardness (matched pair)
  // Higher headroom: 1.2x hardness vs EL34's 1.4x
  push = b > 0 ? b : 0;
  push = tanh_approx(push * 1.2) * bplus;
  pull = b < 0 ? -b : 0;
  pull = tanh_approx(pull * 1.2) * bplus;

  out = push - pull;

  // Output transformer saturation — low frequency core loading
  // When low_energy is high (big bass notes), the transformer core
  // partially saturates, adding even harmonics to the low end
  // and slightly compressing the fundamental.
  // THIS IS THE SVT GROWL.
  xfmr_sat = this.hd.env_lo;
  xfmr_sat = min(1.0, xfmr_sat * 2.0);
  xfmr_sat > 0.05 ? (
    // Extract low content via one-pole LP (~80Hz)
    this.xfmr_lp = this.xfmr_lp * 0.988 + out * 0.012;
    lo_content = this.xfmr_lp;
    hi_content = out - lo_content;
    // Saturate ONLY the low content, proportional to core loading
    lo_saturated = tanh_approx(lo_content * (1.0 + xfmr_sat * 1.5))
                   / (1.0 + xfmr_sat * 0.3);
    // Blend: more saturation when core is more loaded
    lo_final = lo_content + xfmr_sat * (lo_saturated - lo_content);
    out = lo_final + hi_content;
  );

  // SVT NFB is tighter than Marshall — more controlled at all times
  nfb_freq = 5000 - (this.hd.density - 1.0) * 600;
  nfb_freq = max(3000, min(6000, nfb_freq));
  abs(nfb_freq - this.last_nfb_freq) > 50 ? (
    this.nfb_lp.bq_set_lp(nfb_freq, 0.5);
    this.last_nfb_freq = nfb_freq;
  );
  out = this.nfb_lp.bq_proc(out);
  out = this.pres_f.bq_proc(out);
  out = this.dc.dc_proc(out);
  out * 0.9;
);

// === SOFT GATE ===
function sgate_init() (
  this.env = 0;
  this.att = exp(-1/(srate * 0.0005));
  this.rel = exp(-1/(srate * 0.150));
);
function sgate_proc(x) local(ax, gate_gain) (
  ax = abs(x);
  ax > this.env ? (
    this.env = this.att * this.env + (1-this.att) * ax;
  ) : (
    this.env = this.rel * this.env + (1-this.rel) * ax;
  );
  this.env > 0.001 ? ( gate_gain = 1.0; )
  : this.env < 0.0002 ? ( gate_gain = 0.0; )
  : (
    gate_gain = (this.env - 0.0002) / 0.0008;
    gate_gain = gate_gain * gate_gain * (3.0 - 2.0 * gate_gain);
  );
  x * gate_gain;
);

// === CRUSHINATOR (SansAmp-style parallel distortion pedal) ===
// The SansAmp secret: parallel clean/dirty blend.
// Clean path keeps transients and low-end definition.
// Dirty path adds grind and harmonics.
// The two mixed together = you hear the attack of every note clearly
// while getting that thick distorted sustain underneath.
function crush_init() (
  // Pre-clip presence shelf (pushes highs into clipping harder)
  this.pre_pres.bq_init();
  this.pre_pres.bq_set_hishelf(2500, 0.0, 0.7);
  // Pre-clip mid push (SansAmp has a mid-forward voice)
  this.pre_mid.bq_init();
  this.pre_mid.bq_set_peak(800, 3.0, 1.0);
  // Post-clip tone shaping
  this.post_lo.bq_init();
  this.post_lo.bq_set_loshelf(100, 0.0, 0.6);
  this.post_hi.bq_init();
  this.post_hi.bq_set_hishelf(4000, 0.0, 0.7);
  // DC block for dirty path
  this.dc.dc_init();
);
function crush_set(presence, low, high) local(pres_db, lo_db, hi_db) (
  // Presence: 0-100% → 0 to +12dB shelf at 2.5kHz
  pres_db = presence * 12;
  this.pre_pres.bq_set_hishelf(2500, pres_db, 0.7);
  // Post low: 0-100% → -8 to +8dB
  lo_db = (low - 0.5) * 16;
  this.post_lo.bq_set_loshelf(100, lo_db, 0.6);
  // Post high: 0-100% → -8 to +8dB
  hi_db = (high - 0.5) * 16;
  this.post_hi.bq_set_hishelf(4000, hi_db, 0.7);
);
function crush_proc(x, drive, blend) local(clean, dirty, b, g) (
  // Save clean signal for parallel blend
  clean = x;

  // Pre-clip: presence shelf + mid push
  b = this.pre_pres.bq_proc(x);
  b = this.pre_mid.bq_proc(b);

  // Drive: SansAmp uses diode clipping — harder than tubes, flatter tops
  // This is NOT tanh (too soft). We use tanh with high hardness for that
  // crunchy, aggressive, "solid state pedal" clip character.
  g = 1.0 + drive * 8.0;
  b = b * g;

  // Hard diode-style clip: tanh with high hardness + slight asymmetry
  // Positive clips harder (like a real diode pair with slight mismatch)
  b >= 0 ? (
    b = tanh_approx(b * 2.5) * 0.7;
  ) : (
    b = tanh_approx(b * 2.0) * 0.8;
  );

  // Post-clip tone shaping
  b = this.post_lo.bq_proc(b);
  b = this.post_hi.bq_proc(b);
  b = this.dc.dc_proc(b);

  dirty = b;

  // THE BLEND — this is the whole point of a SansAmp
  // 0% = full clean (pedal is just a buffer)
  // 50% = half clean + half dirty (the sweet spot — definition + grind)
  // 100% = full dirty (pure crush, loses some definition)
  clean * (1.0 - blend) + dirty * blend;
);

